<h1>Welcome to SoftUni Wiki!</h1>
<section>
    <h2>Edit article
        <div class="controls">
            <a href="/article/lock/{{article._id}}">Lock article</a>
            <a href="/article/unlock/{{article._id}}">Unlock article</a>
        </div>
    </h2>
    <div class="spacer">
        <form method="POST"  enctype="multipart/form-data">
            <label>Article title</label>
            <h3>{{article.title}}</h3>
            <label>Content</label>
            <textarea name="content">
                {{edit.content}}
            </textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>