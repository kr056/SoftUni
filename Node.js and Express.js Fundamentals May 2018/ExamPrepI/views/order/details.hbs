<h1>Order details</h1>
<div class="catalog">
    <div class="column">
        <img src="{{product.imageUrl}}">
    </div>
    <div class="column">
        <h2 style="text-transform:capitalize;">{{product.category}} doner, {{product.size}}cm</h2>
        <h3>{{order.date}}</h3>
        <div class="toppings">
            {{#each order.toppings}} {{this}}
            <br> {{/each}}
        </div>
    </div>
    <div class="status">
        <div class="status-block">
            <span class="progress-right"></span>
            <span class="checkpoint {{#if order.pending}} current {{/if}}"></span>
            <br> Pending
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="progress-right"></span>
            <span class="checkpoint   {{#if order.progress}} current {{/if}}"></span>
            <br> In progress
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="progress-right"></span>
            <span class="checkpoint {{#if order.transit}} current {{/if}}"></span>
            <br> In transit
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="checkpoint {{#if order.delivered}} current {{/if}}"></span>
            <br> Delivered
        </div>
    </div>
</div>