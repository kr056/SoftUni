<h1>Your orders</h1>
<div class="orders">
    {{#if roleAdmin}}
    <form method="post" action="/order/status-change" enctype="multipart/form-data">
        {{#each orders}}
        <div class="order">
            <input name="order_id" type="hidden" value="{{_id}}">
            <span class="order-time">{{date}}</span>
            <span style="text-transform:capitalize;" class="order-name">{{category}} doner, {{size}} cm</span>
            <span class="order-status">
                <select name="orderStatus" selected="{{status}}">
                    <option>Pending</option>
                    <option>In Progress</option>
                    <option>In Transit</option>
                    <option>Delivered</option>
                </select>
            </span>
            <a href="/order/details/{{_id}}" class="button order-button">Details</a>
        </div>
        {{/each}}
        <input type="submit" value="Save Changes" class="button" style="border:0">
    </form>
    {{else}} {{#each orders}}
    <div class="order">
        <span class="order-time">{{date}}</span>
        <span style="text-transform:capitalize;" class="order-name">{{category}} doner, {{size}} cm</span>
        <span class="order-status">{{status}}</span>
        <a href="/order/details/{{_id}}" class="button order-button">Details</a>
    </div>
    {{else}}
    <p>No Orders</p>
    {{/each}} {{/if}}
</div>